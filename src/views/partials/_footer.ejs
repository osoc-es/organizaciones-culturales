<script>
    // When the user scrolls down 80px from the top of the document, resize the navbar's padding and the logo's font size
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 80 || document.documentElement.scrollTop > 80) {
    document.getElementById("navbar").style.padding = "10px 10px ";
    document.getElementById("logo").style.fontSize = "20px";
    document.getElementById("searchBar").style.marginTop = "40px";
    document.getElementById("searchCollapse").style.marginTop = "50px";
  } else {
    document.getElementById("navbar").style.padding = "20px 10px";
    document.getElementById("logo").style.fontSize = "40px";
    document.getElementById("searchBar").style.marginTop = "60px";
    document.getElementById("searchCollapse").style.marginTop = "70px";
  }
} 
</script>
