<%- include('partials/_header') %>


<div class="d-flex justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-md">
                <div class="card">
                    <h5 class="card-header">Create Event</h5>
                    <div class="card-body">
                        <form action="/create-event" method="POST">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md">
                                        <div class="form-group">
                                            <label for="exampleInputTitle">Titulo</label>
                                            <input type="text" class="form-control" placeholder="title" name="title">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputDescription">Descripcion</label>
                                            <input type="text" class="form-control" row="3" placeholder="description" name="description_event">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputAforo">Aforo</label>
                                            <input type="text" class="form-control" placeholder="aforo"
                                                name="max_capacity">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPrice">Precio</label>
                                            <input type="text" class="form-control" placeholder="precio" name="price">
                                        </div>
                                        <div class="form-group">
                                            <label for="categories_id">Categorias</label>
                                            <select class="form-control" id="categories_id" name="category">
                                                <%for(var i = 0; i < categories.size;i++){%>
                                                <option><%=categories.get(i) %></option>
                                                <%}%>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPrice">Tags</label>
                                            <input type="text" class="form-control" placeholder="#tag" name="tags">
                                        </div>
                                    </div>
                                    <div class = "col-md">
                                       
                                        <div class="form-group">
                                            <label for="exampleInputPrice">Dirección</label>
                                            <input type="text" class="form-control" placeholder="direccion" name="path">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPrice">Información extra</label>
                                            <input type="text" class="form-control" placeholder="rampas, ascensor, parking, etc"
                                                name="extra_info">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPrice">Web</label>
                                            <input type="text" class="form-control" placeholder="www." name="web">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPrice">Imagen</label>
                                            <input type="text" name="main_picture" id="input-files" class="form-control" />
                                        </div>       
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Create event</button>
                            </div>
                        </form>
                    </div>
                </div>
               
            </div>  
        </div>
    </div>
</div>



<%- include('partials/_footer.ejs') %>